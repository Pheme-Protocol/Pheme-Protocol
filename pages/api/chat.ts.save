import OpenAI from 'openai';

const ovvexport default async function handler(req, res) {
  const { prompt } = req.body;

  console.log("â¡ï¸ Received prompt:", prompt);
  console.log("ğŸ”‘ API Key loaded:", !!process.env.OPENAI_API_KEY);

  try {
    const completion = await openai.chat.completions.create({
      model: 'gpt-3.5-turbo',
      messages: [{ role: 'user', content: prompt }],
    });

    const reply = completion.choices[0].message.content;
    console.log("âœ… AURA replied:", reply);
    res.status(200).json({ reply });
  } catch (err) {
    console.error("ğŸ”¥ OpenAI API error:", err);
    res.status(500).json({ reply: "Something went wrong." });
  }
}
